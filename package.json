    "nodemon": "^2.0.12",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "dist/*"
    ],
    "events": {
      "restart": "kill-port 3000"
    }
