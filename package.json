  "description": "An web application to manage tasks efficiently. ",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon --exec npm run startcycle",
    "seed": "node scripts/seeder.js",
    "cleardist": "rm -rf dist",
